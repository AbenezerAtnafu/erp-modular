@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h5 class="mb-5">@ViewData["Title"]</h5>
<form method="post">
    <div class="input-group d-flex flex-column">
        <input asp-for="Input.Email" class="form-control w-100" placeholder="example@gmail.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary shadow-2 mb-2 btn-block">Submit</button>
</form>