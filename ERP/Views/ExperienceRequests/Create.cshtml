@model ERP.Models.HRMS.Surety.ExperienceRequest

@{
    ViewData["Title"] = "Request Experience";
}


<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <h5>Request Experience</h5>
            <span class="d-block m-t-5">Create a new Experience Request.</span>
        </div>
        <div class="card-block table-border-style">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="reason" class="control-label"></label>
                    <input asp-for="reason" class="form-control" />
                    <span asp-validation-for="reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
