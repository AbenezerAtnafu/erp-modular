@model HRMS.Education_management.Education

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <h5>Create Education</h5>
            <span class="d-block m-t-5">Create a new Education.</span>
        </div>
        <div class="card-block table-border-style">
            <form asp-controller="Educations" asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row p-0 m-0">
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="institution_name" class="control-label">Institution Name <span class="text-danger">*</span></label>
                        <input asp-for="institution_name" class="form-control" placeholder="Addis Ababa University" />
                        <small><span asp-validation-for="institution_name" class="text-danger"></span></small>
                    </div>
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="institution_email" class="control-label">Institution Email <span class="text-danger"></span></label>
                        <input asp-for="institution_email" class="form-control" placeholder="Addis@mail.com" />
                        <small><span asp-validation-for="institution_email" class="text-danger"></span></small>
                    </div>
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="institution_website" class="control-label">Institution Website <span class="text-danger"></span></label>
                        <input asp-for="institution_website" class="form-control" placeholder="www.abc.xxx" />
                        <small><span asp-validation-for="institution_website" class="text-danger"></span></small>
                    </div>
                </div>
                <br/>
                <div class="row p-0 m-0">
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="filed_of_study" class="control-label">Filed of Study <span class="text-danger">*</span></label>
                        <input asp-for="filed_of_study" class="form-control" placeholder="computer eng." />
                        <small><span asp-validation-for="filed_of_study" class="text-danger"></span></small>
                    </div>
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="educational_level_type_id" class="control-label">Educational level Type <span class="text-danger">*</span></label>
                        <select asp-for="educational_level_type_id" class="form-control" asp-items="ViewBag.educational_level_type_id"></select>
                        <span asp-validation-for="educational_level_type_id" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 col-sm-12 ">
                        <label asp-for="educational_program_id" class="control-label">Educational Program Type <span class="text-danger">*</span></label>
                        <select asp-for="educational_program_id" class="form-control" asp-items="ViewBag.educational_program_id"></select>
                        <span asp-validation-for="educational_program_id" class="text-danger"></span>
                    </div>
                   
                </div>
                <br/>
                <div class="row p-0 m-0">
                    
                    <div class="col-md-6 col-sm-12 ">
                        <label asp-for="start_date" class="control-label">Start Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="start_date" class="form-control" placeholder="start date..." />
                        <span asp-validation-for="start_date" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 col-sm-12 ">
                        <label asp-for="end_date" class="control-label">End Date <span class="text-danger">*</span></label>
                        <input type="date" asp-for="end_date" class="form-control" placeholder="end date..." />
                        <span asp-validation-for="end_date" class="text-danger"></span>
                    </div>
                </div>
                <br/>
                <div class="row p-0 m-0">           
                    <div class="col-md-6 col-sm-12 ">
                        <label class="control-label">Education File Upload (pdf file only) <span class="text-danger">*</span></label>
                        <input type="file" name="FormFile" id="FormFile" multiple class="form-control" />
                    </div>
                    <div class="col-md-6 col-sm-12 ">
                        <label asp-for="gpa" class="control-label">GPA <span class="text-danger"></span></label>
                        <input type="number" asp-for="gpa" class="form-control" placeholder="3.5" />
                        <small><span asp-validation-for="gpa" class="text-danger"></span></small>
                    </div>
                </div>
                <br/>
                <div class="row px-3 m-0">
                    <label asp-for="description" class="control-label">Additional Info <span class="text-danger"></span></label>
                    <textarea asp-for="description" class="form-control" placeholder="Additional Info"></textarea>
                    <small><span asp-validation-for="description" class="text-danger"></span></small>
                </div>
                <br/>
                <div class="row px-3 m-0">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>          
                </form>
        </div>
    </div>
</div>
