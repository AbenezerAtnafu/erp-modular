@model IEnumerable<ERP.Models.HRMS.Employee_managments.Language>

@{
    ViewData["Title"] = "Language List";
}


<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <div class="">
                <h5>Language List</h5>
                <span class="d-block m-t-5">The following is a list of Language.</span>
            </div>
            <a class="btn btn-info float-right" asp-action="Create"><i class="feather icon-plus fa-fw"></i>Create New</a>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                Language
                            </th>
                            <th>
                                Speaking
                            </th>
                            <th>
                                Listening
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.name)
                                </td>
                                <td>
                                    @if (item.ability_to_Speak >= 0 && item.ability_to_Speak <= 25)
                                    {
                                        <span>Beginner</span>
                                    }
                                    else if (item.ability_to_Speak >= 26 && item.ability_to_Speak <= 50)
                                    {
                                        <span>Intermidiate</span>

                                    }else if (item.ability_to_Speak >= 51 && item.ability_to_Speak <= 75)
                                    {
                                        <span>Advanced</span>
                                    }
                                    else
                                    {
                                        <span>Native</span>
                                    }
                                </td>
                                <td>
                                    @if (item.ability_to_listen >= 0 && item.ability_to_listen <= 25)
                                    {
                                        <span>Beginner</span>
                                    }
                                    else if (item.ability_to_listen >= 26 && item.ability_to_listen <= 50)
                                    {
                                        <span>Intermidiate</span>

                                    }
                                    else if (item.ability_to_listen >= 51 && item.ability_to_listen <= 75)
                                    {
                                        <span>Advanced</span>
                                    }
                                    else
                                    {
                                        <span>Native</span>
                                    }
                                </td>
                                <td class="float-right">
                                    <a onclick="deleteConf(@item.Id)" class="text-danger ml-2" id="DeleteLink">
                                        <i class="feather icon-trash-2 fa-fw"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-success ml-2">
                                        <i class="feather icon-edit fa-fw"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info ml-2">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
