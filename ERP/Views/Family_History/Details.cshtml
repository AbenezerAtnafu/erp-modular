@model ERP.Models.HRMS.Employee_managments.Family_History

@{
    ViewData["Title"] = "Family Details";
}

<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <h5>Family Detail</h5>
            <span class="d-block m-t-5">Full Family Information.</span>
        </div>
        <div class="card-block table-border-style">
            <dl class="row">
                <dt class = "col-sm-2">
                    Name
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.full_name)
                </dd>
                <dt class = "col-sm-2">
                    Occupation
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.job_name)
                </dd>
                <dt class = "col-sm-2">
                   House number
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.house_number)
                </dd>
                <dt class = "col-sm-2">
                   Phone number
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.phonenumber)
                </dd>
                <dt class = "col-sm-2">
                    Alternative phone number 
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.alternative_phonenumber)
                </dd>
                <dt class = "col-sm-2">
                    Gender
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.gender)
                </dd>
                <dt class = "col-sm-2">
                    Relation
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.family_relationship_id)
                </dd>
                <dt class = "col-sm-2">
                    Primary address
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.primary_address)
                </dd>
             </dl>
        </div>
    </div>
</div>
