@model IEnumerable<ERP.Models.HRMS.Employee_managments.Family_History>

@{
    ViewData["Title"] = "Index";
}

<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <div class="">
                <h5>Family History List</h5>
                <span class="d-block m-t-5">The following is a list of family history.</span>
            </div>
            <a class="btn btn-info float-right" asp-action="Create"><i class="feather icon-plus fa-fw"></i>Create New</a>
        </div>
        <div class="card-block px-0 py-3">
            <div class="table-responsive">
                <table class="table table-hover">
                    @foreach (var item in Model) {
                         <tbody>
                            <tr class="unread">
                                <td>
                                    <h6 class="mb-1">@item.full_name</h6>
                                    <p class="m-0">@item.gender</p>
                                </td>
                                <td>
                                    <h6 class="mb-1">
                                        @if (@item.Family_RelationShip_Type.name != null && @item.Family_RelationShip_Type.name.Length > 10)
                                        {
                                            <p class="m-0">@item.Family_RelationShip_Type.name.Substring(0, 10)...</p>
                                        }
                                        else
                                        {
                                            <p class="m-0">@item.Family_RelationShip_Type.name</p>
                                        }
                                    </h6>
                                    <p class="m-0">@item.gender</p>
                                </td>
                                <td>
                                    <h6 class="text-muted"><i class="fas fa-circle text-c-green f-10 m-r-15"></i>11 MAY 12:56</h6>
                                </td>
                                <td class="float-right">
                                    <a onclick="deleteConf(@item.id)" class="text-danger ml-2" id="DeleteLink">
                                        <i class="feather icon-trash-2 fa-fw"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.id" class="text-success ml-2">
                                        <i class="feather icon-edit fa-fw"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-outline-info ml-2">
                                        View
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>