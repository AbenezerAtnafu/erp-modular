@model IEnumerable<HRMS.Types.Marital_Status_Types>

@{
    ViewData["Title"] = "Index";
}

<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <div class="">
                <h5>Marital Status List</h5>
                <span class="d-block m-t-5">The following is a list of Marital Status Types.</span>
            </div>
            <a class="btn btn-info float-right" asp-action="Create"><i class="feather icon-plus fa-fw"></i>Create New</a>
        </div>
        <div class="card-block table-border-style">
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="unread">
                                <td>
                                    <h6 class="mb-1">@Html.DisplayFor(modelItem => item.name)</h6>
                                    <p class="m-0">@Html.DisplayFor(modelItem => item.description)</p>
                                </td>
                               @*  <td>
                                    <h6 class="text-muted"><i class="fas fa-circle text-c-green f-10 m-r-15"></i>11 MAY 12:56</h6>
                                </td> *@
                                <td>
                                    <div class="d-block  text-danger">
                                        <i class="feather icon-trash-2 fa-fw"></i>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-block text-success">
                                        <i class="feather icon-edit fa-fw"></i>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>