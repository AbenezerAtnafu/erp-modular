@model HRMS.Office.Department

@{
    ViewData["Title"] = "Create";
}

<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <h5>Create New Department</h5>
            <span class="d-block m-t-5">Create a new department.</span>
        </div>
        <div class="card-block table-border-style">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="division_id" class="control-label">Division <span class="text-danger">*</span></label>
                    <select asp-for="division_id" class="form-control" asp-items="ViewBag.division_id"></select>
                </div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">Name <span class="text-danger">*</span></label>
                    <input asp-for="name" class="form-control" placeholder="LMIS" />
                    <small><span asp-validation-for="name" class="text-danger"></span></small>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label">Description</label>
                    <textarea asp-for="description" class="form-control" placeholder="project office"></textarea>
                    <small><span asp-validation-for="description" class="text-danger"></span></small>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

