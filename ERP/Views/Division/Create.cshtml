@{
    ViewData["Title"] = "Register Employee";
}

    <div class="col-xl-12">
        <div class="page-header">
            <div class="page-block">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><i class="feather icon-home"></i></li>
                            <li class="breadcrumb-item">Employee</li>
                            <li class="breadcrumb-item">Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="container px-1" style="position:initial;">
    <div class="card">
        <div class="card-header">
            <h5>Insert Organization Division</h5>
            <small class="d-block mt-4 text-muted">A Division is a subset within a larger organization, created based on criteria like function, geography, product, or service. Divisions enable better management, coordination, and focus on specific areas of operation.</small>
        </div>
        <div class="card-block table-border-style">
             <form action="Create" method="post" enctype="multipart/form-data">
                    <div class="form-group p-2">
                        <label for="Name" class="control-label">Division Name <span class="text-danger">*</span></label>
                        <input type="text"
                                id="Name"
                                name="Name"
                                class="form-control"
                                placeholder="LMIS"
                                required
                        />
                        <span name="NameValidation" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                        <label for="Description" class="control-label">Desciption </label>
                        <textarea type="text" id="Description" name="Description" class="form-control" placeholder="special project office"></textarea>
                        <span name="DescriptionValidation" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2">
                    <button class="btn btn-primary float-right" onclick="finalButton()" type="submit">Submit</button>
                    </div>
              </form>
        </div>
     </div>
</div>