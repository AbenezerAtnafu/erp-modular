                            <div id="collapseTwo" class="collapse card-body" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <select asp-items ="ViewBag.department_id"></select>
                            </div>
                            }*@

                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].Selected">
                                    @Model[i].RoleName
                                </label>



                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Update" class="btn btn-glow-dark btn-primary"
                               style="width:auto" />
                        <a class="btn btn-glow-dark btn-secondary text-white" asp-action="Index" style="width:auto">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>